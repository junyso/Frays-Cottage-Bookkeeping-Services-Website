# Document Processor - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# SERVER SETTINGS
# ============================================
PORT=3001
NODE_ENV=development

# ============================================
# ONEDRIVE SETTINGS
# ============================================
ONEDRIVE_PATH=/Users/julianuseya/OneDrive

# ============================================
# FRONTACCOUNTING API
# ============================================
FA_API_URL=http://localhost:8080/fa/api
FA_USERNAME=admin
FA_PASSWORD=your_fa_password

# ============================================
# WHATSAPP BUSINESS API
# ============================================
# Get credentials from Facebook Developer Portal
WHATSAPP_ENABLED=false
WHATSAPP_BUSINESS_ID=your_business_id
WHATSAPP_PHONE_ID=your_phone_number_id
WHATSAPP_TOKEN=your_whatsapp_access_token
WHATSAPP_WEBHOOK_TOKEN=your_webhook_verify_token
WHATSAPP_CLERK_NUMBER=+267XXXXXXXX

# ============================================
# EMAIL SETTINGS (IMAP)
# ============================================
EMAIL_ENABLED=false
EMAIL_IMAP_HOST=imap.your-email-provider.com
EMAIL_IMAP_USER=your_email@domain.com
EMAIL_IMAP_PASSWORD=your_email_password

# ============================================
# DOCUMENT PROCESSING
# ============================================
MIN_LEGIBILITY_SCORE=70
WATERMARK_TEXT=PENDING PROCESSING - DO NOT USE

# ============================================
# FILE PATHS (Local Fallback)
# ============================================
UPLOAD_DIR=uploads
PROCESSED_DIR=processed
REJECTED_DIR=rejected
